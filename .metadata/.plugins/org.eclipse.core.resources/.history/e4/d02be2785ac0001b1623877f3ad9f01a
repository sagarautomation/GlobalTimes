package com.opentesting.tests;

import org.assertj.core.api.Assertions;
import org.testng.annotations.Test;

import com.opentesting.driver.DriverManager;
import com.opentesting.pages.HomePage;

public final class HomePageTest extends BaseTest {
	
	
	private HomePageTest()
	{
		
	}
	
	//TC_001
	
	@Test
	public void TC_001()
	{

		HomePage hp=new HomePage();
		String title=hp.getTitle();
		Assertions.assertThat(title)
		.isNotBlank()
		.isNotEmpty()
		.isNotNull()
		.contains("Global Times");
		
		Assertions.assertThat(hp.get_all_links_from_section1()).
		hasSize(15);
		
		
		
	}
	
	
	
	@Test
	public void TC_002() throws InterruptedException
	{

		HomePage hp=new HomePage();
		hp.navigate_to_all_links_one_by_one_copy_paste_content_on_file();
		
		
		
	}

	

}
